<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TaskWorkout" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="CampoTextAzul" parent="Theme.AppCompat.Light">
        <item name="colorAccent">#333895</item>
        <item name="colorControlActivated">#333895</item>
        <item name="colorControlNormal">#68A4F4</item>
        <item name="android:textColorHighlight">#0A0A0A</item>
        <item name="android:textOff">#2962FF</item>
        <item name="android:textOn">#0C1F51</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <color name="colorRadioButtonOn">#68A4F4</color>

    <color name="colorRadioButtonOff">#0A0A0A</color>
</resources>