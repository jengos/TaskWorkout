<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    tools:context=".view.Activity.DetalleProtocoloActivity"
    android:background="@mipmap/fondo"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout

        android:id="@+id/lineartop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <LinearLayout
            android:elevation="30dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/cuatro_bordes_redondos_izq"
            android:gravity="center_vertical|right"
            >
            <TextView
                android:id="@+id/textcambio"
                android:textColor="@color/black"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detalles Protocolos"
                android:textSize="20dp"
                />


        </LinearLayout>

    </LinearLayout>

<ScrollView
    android:background="@color/white"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toBottomOf="@id/lineartop"
    android:layout_width="0dp"
    android:layout_height="0dp"
   >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nombre_protocolo_detalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_marginTop="32dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="parent"

            />


        <TextView
            android:id="@+id/descripcion_protocolo_detalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:justificationMode="inter_word"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_margin="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nombre_protocolo_detalle"
            />

        <TextView
            android:id="@+id/requerimientos_protocolo_detalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:justificationMode="inter_word"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_margin="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/descripcion_protocolo_detalle"
            />

        <TextView
            android:id="@+id/adicional_protocolo_detalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:justificationMode="inter_word"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_margin="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/requerimientos_protocolo_detalle"
            />

        <TextView
            android:id="@+id/url_protocolo_detalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:justificationMode="inter_word"
            android:autoLink="web"
            android:textSize="14sp"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/adicional_protocolo_detalle"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>